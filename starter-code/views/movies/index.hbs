<h1>Our MongoDB movies</h1>
<a href="movies/new">Create a Movie</a>
<hr>
{{#each movies}}
<div class="movies-list">
    <p><a href="/movies/{{_id}}">{{title}}</a></p>
    <form action="/movies/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>
</div>
{{/each}}

