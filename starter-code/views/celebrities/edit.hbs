<h2>Editing {{celebrities.name}}</h2>

<form action="/celebrities/{{celebrity._id}}/edit" method="POST">
    <label>
        Name
        <input type="text" name="name" value="{{celebrities.name}}">
    </label>
    <label>
        Occupation
        <input type="text" name="occupation" value="{{celebrities.occupation}}">
    </label>
    <label>
        Catch Phrase
        <input type="text" name="catchPhrase" value="{{celebrities.catchPhrase}}">
    </label>
    <button type="submit">Edit</button>
</form>